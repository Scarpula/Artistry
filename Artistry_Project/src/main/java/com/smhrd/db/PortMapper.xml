<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.smhrd.db.PortMapper">
  
      <!-- 포트폴리오 정보 삽입 -->
    <insert id="insertPort" parameterType="com.smhrd.model.Port">
        INSERT INTO portfolios (pf_path, mb_email, pf_name, pf_category, pf_info)
        VALUES (#{pf_Path}, #{mb_Email}, #{pf_Name}, #{pf_Cate}, #{pf_Info})
    </insert>
	
	<select id="getPortList" parameterType="com.smhrd.model.Port" resultType="com.smhrd.model.Port">
		select * from portfolios where mb_email=#{mb_Email}
	</select>

</mapper>